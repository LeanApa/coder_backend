<h1>Listado de productos agregados al momento</h1>

<div class="row">
{{#each products.docs}}
    <div class="card col-3 m-1" style="width: 18rem;">
        <img src="..." class="card-img-top" alt={{this.thumbnails}}>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.category}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.code}}</p>
            <p class="card-text">{{this.price}}</p>
            <p class="card-text">{{this.status}}</p>
            <p class="card-text">{{this.stock}}</p>
            <button type="button" class="btn btn-primary AgregarCarrito" onClick="agregarAlCarrito('{{this._id}}')">Agregar al Carrito</button>
        </div>
    </div>
{{/each}}
</div>
<div>
    {{#if products.hasNextPage}}
    <a href={{nextLink}}>Página siguiente</a>
    {{/if}}
    {{#if products.hasPrevPage}}
    <a href={{prevLink}}>Página anterior</a>
    {{/if}}
</div>

<script src="/js/products.js"></script>