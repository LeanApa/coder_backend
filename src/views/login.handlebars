<div>
  <h1>Inicio de Sesion</h1>

  <div>
    <form action="/api/sessions/login" method="post" id="login">
      <label for="email">Correo</label><br />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="introduzca su correo electronico"
      />
      <br />
      <label for="password">Contrasena</label>
      <br />
      <input
        type="password"
        name="password"
        id="password"
        placeholder="introduzca su contrasena"
        required
      />
      <br />
      <button type="submit">Login</button>
    </form>
  </div>

</div>
  <div>
   <a href="/api/sessions/github"><button>Entrar con github</button></a>
  </div>
  <div>
    <form action="/register" method="get">
      <button type="submit">Registrarse</button>
    </form>
  </div>
  <div>
    <form action="/mail/reset" method="post"  id="reset">
     <input
        type="toMail"
        name="toMail"
        id="toMail"
        placeholder="introduzca su correo electronico"
      />
      <button type="submit">Olvidé mi contraseña</button>
    </form>
  </div>

</div>

